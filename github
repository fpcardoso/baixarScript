mkdir scripts;cd scripts;touch gpush gclone; chmod +x gpush gclone; cd ..;
echo export PATH=$PATH:$PWD/scripts >> ~/.profile;
echo export PATH=$PATH:$PWD/scripts >> ~/.bashrc;
curl -sL https://raw.githubusercontent.com/fpcardoso/utils/master/scripts/github/push > $PWD/scripts/gpush;
curl -sL https://raw.githubusercontent.com/fpcardoso/utils/master/scripts/github/clone > $PWD/scripts/gclone;
echo -e "set nu\nset paste\nset background=dark\nsy on\nset tabstop=4" > $HOME/.vimrc;
source $HOME/.bashrc;
